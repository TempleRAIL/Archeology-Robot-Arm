<launch>

  <arg name="record_sherd_data" default="true" />

  <include file="$(find rascal_launch)/launch/perception.launch"/>

  <node name="sherd_states" pkg="rascal_control" type="rascal_state_machine.py" output="screen">
    <rosparam command="load" file="$(find rascal_launch)/config/mat_layout.yaml"/>
  </node>

  <node name="sherd_mass" pkg="rascal_interface" type="sherd_mass_server.py" output="screen" respawn="true"/>
  <node name="read_scale_server" pkg="rascal_interface" type="read_scale_server.py" output="screen" respawn="true"/>
  <node name="take_photo_server" pkg="rascal_interface" type="take_photo_server.py" output="screen" respawn="true"/>

  <node pkg="rosbag" type="record" name="record_sherd_data" output="screen"
    args="-o $(find rascal_data)/bagfiles/sherd_data /sherd_data /clock /status" 
    if="$(arg record_sherd_data)" />

</launch> 
